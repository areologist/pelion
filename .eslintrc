{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "babel",
    "react",
    "ava"
  ],
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "max-params": [1, 4],
    "max-len": [1, 80],
    "max-depth": [1, 3],
    "comma-dangle": 0,
    "complexity": [1, 10],
    "arrow-spacing": 2,
    "constructor-super": 2,
    "no-class-assign": 1,
    "no-const-assign": 2,
    "no-console": 0,
    "no-this-before-super": 2,
    "no-var": 2,
    "object-shorthand": [2, "always"],
    "prefer-arrow-callback": 2,
    "prefer-const": 1,
    "prefer-spread": 1,
    "prefer-template": 1,
    "quote-props": 0,
    "require-yield": 2,
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "ava/no-cb-test": 0,
    "ava/prefer-power-assert": 0,
    "ava/test-ended": 2
  }
}
